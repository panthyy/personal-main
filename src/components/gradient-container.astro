
---
import { twMerge } from 'tailwind-merge';
import type { HTMLAttributes } from 'astro/types';
export type Props = HTMLAttributes<'button'> & {
    className?: string,
}

const {...props } = Astro.props

---
<div 
class={
    twMerge(
        'relative inline-block',
        props.class
    )
}>
    <slot/>
        <div class='absolute pointer-events-none -top-[100%] -z-20 -left-[60%] w-[300%] h-[300%] flex items-center justify-center '>
            <div  
            class='gradient-spotlight -z-20 w-full h-full '></div>
        </div>
</div>

<style>
    .gradient-spotlight {
		background-image: linear-gradient(90deg, #245383 0%, #0973DC 48.44%, #E5EDF5 100%);
		mask-image:  radial-gradient(rgba(0, 0, 0, 0.5), transparent 50%);
        pointer-events: none;
	}
</style>